msgid ""
"Implementing a `Validator` is fairly straightforward, especially when you "
"know of the `ValidationUtils` helper class that the Spring Framework also "
"provides. The following example implements `Validator` for `Person` "
"instances:"
msgstr ""

#. type: delimited block -
#: /mnt/c/Users/etrees/Desktop/private/spring-framework/framework-docs/modules/ROOT/pages/core/validation/validator.adoc:51
#, no-wrap
msgid "\tpublic class PersonValidator implements Validator {\n"
msgstr ""

#. type: delimited block -
#: /mnt/c/Users/etrees/Desktop/private/spring-framework/framework-docs/modules/ROOT/pages/core/validation/validator.adoc:58
#, no-wrap
msgid ""
"\t\t/**\n"
"\t\t * This Validator validates only Person instances\n"
"\t\t */\n"
"\t\tpublic boolean supports(Class clazz) {\n"
"\t\t\treturn Person.class.equals(clazz);\n"
"\t\t}\n"
msgstr ""

#. type: delimited block -
#: /mnt/c/Users/etrees/Desktop/private/spring-framework/framework-docs/modules/ROOT/pages/core/validation/validator.adoc:69
#, no-wrap
msgid ""
"\t\tpublic void validate(Object obj, Errors e) {\n"
"\t\t\tValidationUtils.rejectIfEmpty(e, \"name\", \"name.empty\");\n"
"\t\t\tPerson p = (Person) obj;\n"
"\t\t\tif (p.getAge() < 0) {\n"
"\t\t\t\te.rejectValue(\"age\", \"negativevalue\");\n"
"\t\t\t} else if (p.getAge() > 110) {\n"
"\t\t\t\te.rejectValue(\"age\", \"too.darn.old\");\n"
"\t\t\t}\n"
"\t\t}\n"
"\t}\n"
msgstr ""

#. type: delimited block -
#: /mnt/c/Users/etrees/Desktop/private/spring-framework/framework-docs/modules/ROOT/pages/core/validation/validator.adoc:76
#, no-wrap
msgid "\tclass PersonValidator : Validator {\n"
msgstr ""

#. type: delimited block -
#: /mnt/c/Users/etrees/Desktop/private/spring-framework/framework-docs/modules/ROOT/pages/core/validation/validator.adoc:83
#, no-wrap
msgid ""
"\t\t/\\**\n"
"\t\t * This Validator validates only Person instances\n"
"\t\t */\n"
"\t\toverride fun supports(clazz: Class<*>): Boolean {\n"
"\t\t\treturn Person::class.java == clazz\n"
"\t\t}\n"
msgstr ""

#. type: delimited block -
#: /mnt/c/Users/etrees/Desktop/private/spring-framework/framework-docs/modules/ROOT/pages/core/validation/validator.adoc:94
#, no-wrap
msgid ""
"\t\toverride fun validate(obj: Any, e: Errors) {\n"
"\t\t\tValidationUtils.rejectIfEmpty(e, \"name\", \"name.empty\")\n"
"\t\t\tval p = obj as Person\n"
"\t\t\tif (p.age < 0) {\n"
"\t\t\t\te.rejectValue(\"age\", \"negativevalue\")\n"
"\t\t\t} else if (p.age > 110) {\n"
"\t\t\t\te.rejectValue(\"age\", \"too.darn.old\")\n"
"\t\t\t}\n"
"\t\t}\n"
"\t}\n"
msgstr ""

